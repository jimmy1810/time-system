doctype html
html
	head
		title= title
		link(rel='stylesheet', href='/stylesheets/style.css')
		link(rel='stylesheet', href='/dist/bootstrap.min.css')
		link(rel = 'stylesheet' href='http://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css')
	body
		nav.navbar.navbar-inverse.navbar-fixed-top
			.container
				.navbar-header
					button.navbar-toggle.collapsed(type='button',data-toggle='collapse',data-target='#navbar',aria-expanded='false',aria-controls='navbar' )
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href='/') Time Cards
				#navbar.collapse.navbar-collapse
					ul.nav.navbar-nav
						li
							a(href='/userlist') View Users
					ul.nav.navbar-nav.navbar-right
						if user
							li
								a(href='/user/'+user._id) #{user.name}
							li
								a(href='/logout') Logout
						else
							li.dropdown
								a.dropdown-toggle(data-toggle="dropdown" href="#") Register
									span.caret
								ul.dropdown-menu
									li
										a(href='/register/company') Company
									li
										a(href='/register/employee') Employee
		block content

		script(type="text/javascript" src='/dist/jquery.min.js')
		script(type="text/javascript" src='/dist/bootstrap.min.js')
