extends layout

block content
	#home
		h1= title
		p Welcome to #{title}
		.container
			hr
			if !user
				a.button.btn.btn-default(href='/signup/admin') Get Started as an admin
				span -----
				a.button.btn.btn-default(href='/signup/emp') Get Started as an employee*
				br
				br
				p *company key needed to register as an employee
			if user
				h3 Welcome #{user.name}
				if user.admin=="admin"
					a.btn.btn-primary(href='/admin') #{user.company}
				else
					a.btn.btn-primary(href='/users/'+user._id) #{user.name}
					
