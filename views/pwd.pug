extends layout

block content
	#pwd
		if user
			.container
				.col-sm-offset-4.col-sm-4
					h3.col-sm-offset-2 Change your password
					hr
					h4.col-sm-6.col-sm-offset-3 User id : #{user.eid}
					form.form-horizontal.needs-validation(method="POST" action="/changePwd/"+user._id)
						.form-group
							.col-sm-6.col-sm-offset-3
								input.form-control(name="password" ,type="password",placeholder="Password" required)

						hr
						br

						input.btn.btn-success.col-sm-offset-3(type="submit" value="Change Password")
